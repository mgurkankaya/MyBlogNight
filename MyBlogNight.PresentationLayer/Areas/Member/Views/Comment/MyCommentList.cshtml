@model List<Comment>
@{
    ViewData["Title"] = "MyCommentList";
    Layout = "~/Views/MemberLayout/Index.cshtml";
    int count = 0;
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hoşgeldin, @ViewData["UserFullName"]</h4>
                    <p class="mb-0">Sana ait yorum listesi burasıdır.</p>
                </div>
            </div>
           
        </div>
        <!-- row -->

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Yorumlar</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-responsive-sm">
                                <thead>

                                    <tr>
                                        <th>#</th>
                                        <th>Yazar Adı</th>
                                        <th>Makale Adı</th>
                                        <th>Yorum Detayı</th>
                                        <th>Tarih</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;


                                        <tr>
                                            <th>@count</th>
                                            <td>@item.AppUser.Name</td>
                                            <td>@item.Article.Title</td>
                                            <td>@item.CommentDetail</td>
                                            <td> @(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))</td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>

        </div>
    </div>
</div>