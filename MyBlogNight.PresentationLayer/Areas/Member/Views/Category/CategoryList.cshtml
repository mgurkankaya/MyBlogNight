@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/MemberLayout/Index.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="mb-0 text-capitalize" style="font-size: 1.5rem;">Kategori Listesi</h6>
            <a href="/Member/Category/CreateCategory" class="d-flex align-items-center text-decoration-none" style="color: #28a745;">
                <i class="fa fa-plus-circle fs-4 me-2 fa-2x mx-2" style="color: #28a745;"></i> <span style="color: #28a745; font-size: 1.2rem;">Yeni Kategori Ekle</span>
            </a>
        </div>

        <!-- row -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card my-4 shadow">
                    <div class="card-body px-4 pb-3">
                        <div class="table-responsive">
                            <table class="table table-hover align-items-center">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-8">ID</th>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-8 text-center">Kategori</th>
                                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-8 text-center">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.CategoryId</p>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge badge-sm bg-gradient-success">@item.CategoryName</span>
                                            </td>
                                            <td class="text-center">
                                                <a href="/Member/Category/DeleteCategory/@item.CategoryId" class="text-danger mx-2" title="Sil">
                                                    <i class="fa fa-trash fa-2x"></i>
                                                </a>
                                                <a href="/Member/Category/UpdateCategory/@item.CategoryId" class="text-warning mx-2" title="Güncelle">
                                                    <i class="fa fa-edit fa-2x"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
