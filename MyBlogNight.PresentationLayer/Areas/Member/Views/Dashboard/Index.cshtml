@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MemberLayout/Index.cshtml";
}

<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="stat-widget-two card-body">
                        <div class="stat-content">
                            <div class="stat-text">Toplam Yorum Sayısı</div>
                            <div class="stat-digit"> <i class="fa fa-comments"></i>@ViewBag.CommentCount</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar progress-bar-success w-85" role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="stat-widget-two card-body">
                        <div class="stat-content">
                            <div class="stat-text">En Çok Görüntülenme</div>
                            <div class="stat-digit">
                                <i class="fa fa-eye"></i> @ViewBag.MaxViewCount
                            </div>
                            <p class="mt-2 text-muted">
                                <strong>Başlık:</strong> @ViewBag.TopViewedArticleTitle
                            </p>
                        </div>
                        <div class="progress">
                            <div class="progress-bar progress-bar-danger w-65" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>

            
        </div>

      

    </div>
</div>
