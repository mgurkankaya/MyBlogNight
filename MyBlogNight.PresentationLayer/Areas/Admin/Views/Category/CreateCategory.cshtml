@model Category
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<style>
    input.form-control {
        border: 1px solid #E91E63; /* Gri kenarlık */
        height: 50px; /* Yüksekliği artır */
        padding: 10px; /* İç boşluk ekle */
        font-size: 16px; /* Yazı boyutunu artır */
    }
</style>
<div class="row">
    <div class="card-body p-3 pb-0">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h5 class="text-white">Kategori Ekle</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <input type="text" asp-for="CategoryName" id="CategoryName" class="form-control" placeholder="Kategori adı girin" />
                                <span class="text-danger" asp-validation-for="CategoryName"></span>
                            </div>
                         
                            <div class="mt-3 text-end">
                                <button type="submit" class="btn btn-primary">Kategoriyi Ekle</button>
                                <a href="/Admin/Category/CategoryList" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Geri Dön
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


