@model Article
@{
    ViewData["Title"] = "CreateArticle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<style>
    input.form-control {
        border: 1px solid #E91E63; 
        height: 50px; 
        padding: 10px; 
        font-size: 16px; 
    }
</style>
<div class="row">
    <div class="card-body p-3 pb-0">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h5 class="text-white">Makale Ekle</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input type="text" asp-for="Title"  class="form-control" placeholder="Kategori adı girin" />
                                <label>Küçük Kapak Fotoğrafı</label>
                                <input type="text" asp-for="CoverImageUrl"  class="form-control" placeholder="img url..." />
                                <label>Ana Kapak Fotoğrafı</label>
                                <input type="text" asp-for="MainImageUrl"  class="form-control" placeholder="img url..." />
                                <label>Kategori Seç</label>
                               @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v1, new {@class="form-control"})
                            </div>
                            <div class="mt-3 text-end">
                                <button type="submit" class="btn btn-primary">Ekle</button>
                                <a href="/Admin/Article/ArticleList" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Geri Dön
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>