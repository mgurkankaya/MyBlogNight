@model IEnumerable<Comment>

@if (Model != null && Model.Any())
{
    foreach (var comment in Model)
    {
    




        <div class="row">
            <div class="col-lg-12">
                <div class="comments-list">
                    <div class="media">
                        <a class="media-left" href="#">
                            <img src="@comment.AppUser.ImageUrl" alt="" class="rounded-circle">
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading user_name">>@comment.AppUser.Name <small>@comment.CreatedDate.ToString("dd-MMM-yyyy")</small></h4>
                            <p>@comment.CommentDetail</p>
                            <a href="#" class="btn btn-primary btn-sm">Yanıtla</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    }
}
else
{
    <p>Bu makaleye henüz yorum yapılmamış.</p>
}
