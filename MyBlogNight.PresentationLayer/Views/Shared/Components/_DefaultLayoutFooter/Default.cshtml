@model List<Article>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <h2 class="widget-title">Güncel</h2>
                    <div class="blog-list-widget">
                        <div class="list-group">
                            @await Component.InvokeAsync("_DefaultLayoutRecentPostFooter")

                        

                            
                        </div>
                    </div><!-- end blog-list -->
                </div><!-- end widget -->
            </div><!-- end col -->

            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <h2 class="widget-title">Popüler</h2>
                    <div class="blog-list-widget">
                        <div class="list-group">
                            @foreach (var item in Model)
                            {
                                <a href="/Article/ArticleDetail/@item.ArticleId" class="list-group-item list-group-item-action flex-column align-items-start">
                                    <div class="w-100 justify-content-between">
                                        <img src="@item.CoverImageUrl" alt="" class="img-fluid float-left">
                                        <h5 class="mb-1">@item.Title</h5>
                                        <span class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </span>
                                    </div>
                                </a>
                            }
                            

 
                        </div>
                    </div><!-- end blog-list -->
                </div><!-- end widget -->
            </div><!-- end col -->
            @await Component.InvokeAsync("_PopularCategoriesFooter")
            
        </div><!-- end row -->

        <div class="row">
            <div class="col-md-12 text-center">
                <br>
                <br>
                <div class="copyright">&copy; by: <a href="#">MGK</a>.</div>
            </div>
        </div>
    </div><!-- end container -->
</footer><!-- end footer -->