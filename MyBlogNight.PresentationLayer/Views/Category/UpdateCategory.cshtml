@model MyBlogNight.EntityLayer.Concrete.Category

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h5>Kategori Güncelle</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="CategoryId" class="form-label">Kategori ID</label>
                            <input type="text" asp-for="CategoryId" id="CategoryId" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label for="CategoryName" class="form-label">Kategori Adı</label>
                            <input type="text" asp-for="CategoryName" id="CategoryName" class="form-control" placeholder="Yeni kategori adını girin" />
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Güncelle
                            </button>
                            <a href="/Category/List" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>