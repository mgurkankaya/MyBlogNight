@model List<MyBlogNight.EntityLayer.Concrete.Category>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .gradient-card {
        background: linear-gradient(135deg, #6a11cb, #2575fc); /* Mor-Mavi geçişi */
        color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .gradient-card:hover {
            transform: scale(1.03);
        }

    .card-header {
        background: rgba(255, 255, 255, 0.1);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .card-footer {
        background: rgba(255, 255, 255, 0.1);
        border-top: 1px solid rgba(255, 255, 255, 0.2);
    }
</style>

<div class="container mt-5">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card gradient-card text-center">
                    <div class="card-header">
                        <h5 class="card-title">@item.CategoryName</h5>
                    </div>
                    <div class="card-body">
                        <p>Kategori ID: <strong>@item.CategoryId</strong></p>
                        <p>Kategori ile ilgili işlemler için aşağıdaki seçenekleri kullanabilirsiniz:</p>
                        <div class="d-flex justify-content-around">
                            <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                            <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success btn-sm">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>
                            <a href="#" class="btn btn-warning btn-sm">
                                <i class="bi bi-journal-text"></i> Bloglar
                            </a>
                        </div>
                    </div>
                    <div class="card-footer">
                        Son düzenleme: <em>@DateTime.Now.ToShortDateString()</em>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-end mt-4">
        <a href="/Category/CreateCategory" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
        </a>
    </div>
</div>
